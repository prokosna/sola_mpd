{
	"name": "sola_mpd",
	"version": "4.3.0",
	"private": true,
	"author": "prokosna",
	"license": "MIT",
	"scripts": {
		"build": "pnpm -r --if-present build",
		"build:no_types": "pnpm -r --if-present build:no_types",
		"start": "pnpm --filter @sola_mpd/backend start",
		"dev": "pnpm --parallel -r dev",
		"dev_domain": "pnpm --filter @sola_mpd/domain dev",
		"dev_frontend": "pnpm --filter @sola_mpd/frontend dev",
		"dev_backend": "pnpm --filter @sola_mpd/backend dev",
		"proto": "pnpm --filter @sola_mpd/domain proto",
		"lint": "biome lint packages/**/src --write --unsafe && biome lint plugins/**/src --write --unsafe",
		"fmt": "pnpm --parallel /^fmt_/",
		"fmt_biome": "biome format packages/**/src --write && biome format plugins/**/src --write",
		"fmt_clang": "find . -name '*.proto' | xargs clang-format --style '{ BasedOnStyle: Google }' -i",
		"prepare": "husky",
		"lint-staged": "lint-staged",
		"test": "pnpm -r --if-present test"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,md,css,yaml}": [
			"biome check --write --no-errors-on-unmatched"
		],
		"*.proto": [
			"clang-format --style '{ BasedOnStyle: Google }' -i"
		]
	},
	"packageManager": "pnpm@10.18.3",
	"pnpm": {
		"executionEnv": {
			"nodeVersion": "22.21.1"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.9",
		"@swc/cli": "^0.7.9",
		"@swc/core": "^1.15.5",
		"clang-format": "^1.8.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"supertest": "^7.1.4",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@bufbuild/protobuf": "^2.10.2",
		"@connectrpc/connect": "^2.1.1",
		"dayjs": "^1.11.19",
		"uuid": "^13.0.0"
	}
}
