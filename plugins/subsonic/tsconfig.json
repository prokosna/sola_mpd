{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"removeComments": true,
		"allowSyntheticDefaultImports": true,
		"target": "ESNext",
		"sourceMap": true,
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"skipLibCheck": true
	},
	"include": ["./src/**/*", "vitest.config.ts"]
}
